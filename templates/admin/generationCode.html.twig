{% extends 'base.html.twig' %}

{% block title %} Home {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
    {% include 'commun/heading.html.twig' %}

    <div class="container" style="margin-top:30px;margin-bottom:30px;padding-top: 4%;padding-bottom: 4%;">
        <div class="row">
            <div class="col-sm-3">
                <a href="{{ path("admin_home") }}"> <button class="btn btn-secondary" style="margin-left: 35%;">Retour</button></a>
            </div>
            <div class="col-sm-6">
                <form method="post" onsubmit="return validateForm()">
                    <div class="input-group mb-3">
                        <input type="number" id="nb_code_generer" name="nb_code_generer" class="form-control" placeholder="Entrez un nombre pour générer X codes">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="submit">Confirmer</button>
                        </div>
                    </div>
                </form>
                {% if(reponseFormulaire) %}
                    <table class="table table-sm" style="margin-top: 1%;text-align: center;">
                        {% for code in codes %}
                            <tr>
                                <td style="padding: 1%;"> {{ code }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div>
        </div>
    </div>

    {% include 'commun/padding.html.twig' %}
{% endblock %}